@page "/login"
@model REMS.Pages.LoginModel

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تسجيل الدخول</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(120deg, red,black);
            background-size: 200% 200%;
            animation: gradientAnimation 10s ease infinite;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        @@keyframes gradientAnimation {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        form {
            background-color: darkred;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            animation: fadeInUp 1s ease-in-out;
        }

        h3 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            color:red;
            animation: fadeInDown 1s ease-in-out;
        }

        .mb-3 {
            margin-bottom: 20px;
            position: relative;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 8px;
            color: #333;
            font-size: 14px;
        }

        input {
            width: 90%;
            padding: 12px 15px;
            border: 1px solid #ccc;
            border-radius: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        input:focus {
            border-color: #4a90e2;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            outline: none;
        }

        a {
            display: inline-block;
            margin-top: 10px;
            color: ButtonShadow;
            text-decoration: none;
            font-size: 14px;
            animation: fadeIn 2s ease-in-out;
        }

        a:hover {
            text-decoration: underline;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: black;
            border: none;
            border-radius: 10px;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            animation: jello 1.5s infinite;
        }

        button:hover {
            background-color:ActiveBorder;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .alert {
            text-align: center;
            color: red;
            font-size: 14px;
            margin-bottom: 15px;
            animation: flash 1s ease-in-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes jello {
            0%, 100% {
                transform: none;
            }
            25% {
                transform: scale(1.05);
            }
            50% {
                transform: scale(0.95);
            }
            75% {
                transform: scale(1.02);
            }
        }
    </style>
</head>
<body>
    <form method="post">
        <h3 class="animate__animated animate__fadeInDown">تسجيل الدخول</h3>

        @if (Model.LoginFailed)
        {
            <div class="alert animate__animated animate__flash">البريد الإلكتروني أو كلمة المرور غير صحيحة.</div>
        }

        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="email">البريد الإلكتروني</label>
            <input id="email" name="Email" type="email" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="password">كلمة المرور</label>
            <input id="password" name="Password" type="password" class="form-control" />
        </div>
        <br />
        <a href="/complaint">اضافة شكوى</a>

        <button type="submit">تسجيل الدخول</button>
    </form>
</body>
</html>
